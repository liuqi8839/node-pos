<%- include header %>

<div class="col-xs-12 col-md-12 allDiscounts">
    <div>
        <a class="btn btn-primary" href="/addRule" >保存商品</a>
    </div>
    <table class="table table-hover table-responsive">
        <tr>
            <td>商品</td>
            <td>价格</td>
            <td>时间</td>
            <td>打折方式</td>
            <td>操作</td>
        </tr>
        <% allDiscounts.forEach( function(oneDiscount) { %>
        <tr class="otherAttr">
            <div class="col-md-4"><td><%= oneDiscount.name %></td></div>
            <div class="col-md-4"><td><%= oneDiscount.price %></td></div>
            <div class="col-md-4"><td><%= oneDiscount.day %></td></div>
            <div class="col-md-4"><td>买 <%= oneDiscount.buy %> 赠 <%= oneDiscount.give %></td></div>
            <div class="col-md-4">
                <td>
                    <a class="deleteDiscount" href="#">删除</a>
                </td>
            </div>
        </tr>
        <% }) %>
    </table>
</div>


<%- include footer %>