<%- include header %>

<div class="col-xs-12 col-md-12 addGoods">
    <div class="col-xs-1 col-md-2"></div>
    <div class="col-xs-12 col-md-10 goodForm">

        <form class="form-horizontal" role="form" method="post">
            <div class="btnBar">
                <div class="row">
                    <div class="col-xs-3 col-md-3"><button type="submit" class="btn btn-primary">保存商品</button></div>
                    <div class="col-xs-3 col-md-3"><a type="button" class="btn btn-primary addAttr" href="/addAttribute">添加属性</a></div>
                    <div class="col-xs-3 col-md-3"><a href="/subAttribute" class="btn btn-primary">删除属性</a></div>
                    <div class="col-xs-3 col-md-3"><a type="button" class="btn btn-primary" href="/addGoods">取消</a></div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label class="col-sm-2 control-label">商品名称: &nbsp;&nbsp;</label>
                <div class="col-sm-10">
                    <input  name='name' id='name' type="text" class="form-control" placeholder="请输入商品名称" autofocus="true"
                            <% if(thisInfo.name != undefined) {%>
                            value="<%= thisInfo.name%>"
                            <%}%>
                            >
                </div>
            </div>
            <div class="form-group col-md-6">
                <label class="col-sm-2 control-label">商品数量: &nbsp;&nbsp;</label>
                <div class="btn-group col-sm-10 input-group number">
                    <span class="input-group-btn">
                        <a class="btn btn-default subNum" type="button">-</a>
                    </span>
                    <input name='count' id="count" type="text" class="form-control" value='0'
                            <% if(thisInfo.count != undefined) {%>
                            value="<%= thisInfo.count%>"
                            <%}%>
                           onkeydown="checkInt();"
                           onblur="checkInt(); if($(this).val()==''){ $(this).val(0); }">
                    <span class="input-group-btn">
                        <a class="btn btn-default addNum" type="button">+</a>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label class="col-sm-2 control-label">单价(元): &nbsp;&nbsp;&nbsp;</label>
                <div class="col-sm-10">
                    <input name="price" id="price" type="text" class="form-control"  placeholder="请输入单价"
                            <% if(thisInfo.price != undefined) {%>
                           value="<%= thisInfo.price%>"
                            <%}%>
                           onkeydown="checkDecimal();"
                           onblur="checkDecimal();">
                </div>
            </div>
            <div class="form-group col-md-6">
                <label class="col-sm-2 control-label">单位: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <div class="col-sm-10">
                    <input name="unit" id="unit" type="text" class="form-control"  placeholder="请输入单位"
                            <% if(thisInfo.unit != undefined) {%>
                           value="<%= thisInfo.unit%>"
                            <%}%>
                            >
                </div>
            </div>
            <div class="form-group col-md-6">
                <label class="col-sm-2 control-label">类型: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <div class="col-sm-10">
                    <input name="kind" id="kind" type="text" class="form-control"  placeholder="请输入类型"
                            <% if(thisInfo.kind != undefined) {%>
                           value="<%= thisInfo.kind%>"
                            <%}%>
                            >
                </div>
            </div>
            <% newAttr.forEach(function(attr){ %>
            <div class="form-group col-md-6">
                <label class="col-sm-2 control-label"><%= attr.attrName%>: &nbsp;&nbsp;</label>
                <div class="col-sm-10">
                    <input name="<%= attr.attrName%>" type="text" class="form-control" value="<%= attr.attrValue%>">
                </div>
            </div>
            <% }) %>
        </form>
    </div>

</div>

<script src="../viewStage/backstage/addGoods.js"></script>

<%- include footer%>